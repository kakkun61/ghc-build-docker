FROM ubuntu:16.04
MAINTAINER Takenobu Tani <takenobu.hs@gmail.com>

# GHC building for
#   ubuntu16.04LTS + ghc8.6

ENV LANG     C.UTF-8
ENV LC_ALL   C.UTF-8
ENV LANGUAGE C.UTF-8

# Preparation
# -----------
#   [1]: https://ghc.haskell.org/trac/ghc/wiki/Building/Preparation/Linux
#
RUN apt-get update; \
    apt-get -y install git autoconf automake libtool make gcc g++ \
                       libgmp-dev ncurses-dev libtinfo-dev python3 xz-utils

RUN apt-get install wget; \
    mkdir tmp.haskell-platform; \
    cd tmp.haskell-platform; \
    wget https://haskell.org/platform/download/8.2.2/haskell-platform-8.2.2-unknown-posix--core-x86_64.tar.gz; \
    tar xzf haskell-platform-8.2.2-unknown-posix--core-x86_64.tar.gz; \
    ./install-haskell-platform.sh; \
    cd ..; \
    rm -fr tmp.haskell-platform; \
    cabal update; \
    cabal install alex happy

